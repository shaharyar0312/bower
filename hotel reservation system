void DeluxeRooms(bool Darray[deluxe], int CustIDD[deluxe],int KeyNoD[deluxe],int daysDel[deluxe],string CusNameD[deluxe],int CidD) 
{ 
char reserve; 
int RoomNo,n=0; 
cout << " \nWE have " << deluxe << " DELUXE ROOMS \n0 = AVAILABLE \n1 = RESERVED " << endl; 
cout << "\nROOM NO " << setw(8) << "STATUS" << endl; 
for (int i = 0; i < deluxe; i++) 
{ 
cout << i + 1 << setw(10) << Darray[i]; 
cout << endl; 
}//for ends 
cout << " \nWould u like to reserve any room sir ? \n Press Y/y to continue " << endl; 
cin >> reserve ;  
while ( reserve == 'y' || reserve == 'Y') 
{ 
cout <<"\nWhich Room No. Would you like Reserve sir \n" << endl; 
    cin >> RoomNo; 
if ( RoomNo > 10 || RoomNo < 1 )  
{ 
cout <<RoomNo << "\nThe Room No. "<<RoomNo<<" does Not Exist in our hotel " << endl; 
break; 
} 
else  
{ 
    if ( Darray [RoomNo-1] == 0 )  
   {  
                 Darray[RoomNo-1] = 1 ; 
 CustID2D[RoomNo-1]= CustIDD[CidD]; 
 cout << "\n Kindly Enter Some information \n " << endl; 
 cout << "\n***********************************************************" << endl; 
 cout << "\n enter your fist name only (e.g. Terry)\n " << endl; 
 cin >> CusNameD[RoomNo-1]; 
 cout << "\n For how many days are you going to stay?(kindly enter only numeric values)\n" << endl; 
 cin >> daysDel[RoomNo-1]; 
 cout << "\n***********************************************************\n"<< endl; 
 cout <<"\nRoom No " << RoomNo  <<" Has now been reserved by " << CusNameD[RoomNo-1]<<"\n"<< endl ;  
cout << "\nYour CustomerID  is : " << CustID2D[RoomNo-1] << " and Your Room's Key Number is " << KeyNoD[RoomNo-1]<<endl; 
cout << "\n\n\n" << endl; 
       }//if ends 
  else  
 { 
              cout << "\nThis Room No is Already Reserved sir. \n select any other Room ,sir " << endl; 
  cout << endl; 
 
 }//else ends 
cout << "\nWould you like to reserve any other room sir? Press Y/y to continue " << endl; 
cin >> reserve; 
if ( reserve == 'n' || reserve == 'N'); 
else if(reserve != 'y' || reserve != 'Y')//wrong input checker 
 
       n++;//just to print thank for visiting OR Thanks for  reserving room down below 
}//while ends 
if(  n == 0 )  
{cout << "\nThank You for visiting.Have a nice day :) " << endl;} 
else   
{cout << "\nThanks for Reserving Rooms sir,Hope u enjoy "<< endl;} 
 
 }//else ends 
}//DeluxeRooms functions endss 
 
