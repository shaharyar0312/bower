//Bill functions for admin  
 
void BillCom(int daysCom[common]) 
{ 
float tot; 
int x1 =0;//will count number of  common reserved rooms 
int DaysSum=0; 
for ( int i = 0 ; i < common ; i++) 
{ 
if (Carray [i]== 1 ) 
{ 
x1++; 
DaysSum +=daysCom[i];  
    } 
}//for ends 
tot = x1 * 50 * DaysSum; 
cout << "\nTotal Collection  from Common Rooms is = " << tot <<" USD"<< endl; 
}//BillCom function ends 
 
//__________________________________________________________ 
 
void BillLux(int daysLux[luxury]) 
{ 
float tot; 
int x2 = 0 ;//will count number of luxury reserved rooms 
int DaysSum=0; 
for ( int k = 0 ; k < luxury ; k++) 
{ 
if (Larray [k]== 1 ) 
{ 
x2++;//will count number of luxury reserved rooms  
DaysSum +=daysLux[k]; 
    } 
     
}//for ends 
tot = x2 * 100 * DaysSum; 
cout << "\nTotal Collection  from Luxury Rooms is = " << tot <<" USD"<< endl; 
}//BillLux Function ends 
//___________________________________________________________ 
 
void BillDel (int daysDel[deluxe]) 
{ 
float tot ; 
