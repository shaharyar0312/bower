//Admin Functions starts 
 
void AdminCommon (int CustIDC[common],int KeyNoC[common],int daysCom[common] ,string CusNameC[common]) 
{ 
char reserve; 
int  RoomNo,n=0; 
 
cout << " WE have " << common  <<"  COMMON ROOMS \n0 = AVAILABLE \n1 = RESERVED " << endl; 
cout << "ROOM NO " << setw(8) << "STATUS" << setw(12) << "CUST ID " << setw(12) <<"CUSTOMER NAME" << setw(10)<< "STAY DAYS" << setw(10) << "KEY NO." << endl; 
for (int i = 0; i < common; i++) 
{ 
cout << i + 1 << setw(10) << Carray[i]; 
if (Carray[i] == 1 ) 
{ 
cout << setw(12)<<CustID2C[i] << setw(12) << CusNameC[i]<< setw(13)<<daysCom[i]<<setw(10)<< KeyNoC[i] ; 
} 
cout << endl; 
     }//for ends 
cout << "Would u like to change the status of any room ?\nPress y\Y to continue "<< endl; 
cin >> reserve ;//yes or no  
while ( reserve == 'y' || reserve == 'Y')  
{ 
i:cout << "Select any RESERVEDI(1) Room No.  which you want to change in AVAILABLE(0). OR prres -1 to exit " << endl; 
cin >> RoomNo; 
 if ( RoomNo == -1 ) 
 {break;} 
else if ( RoomNo != -1) 
{ 
if ( Carray[RoomNo-1]  == 0) 
  { 
   cout << "\nIt is Already AVAILABLE(0) \n " << endl; 
  cout << "WARNING!!! You Can Only change from RESERVED(1) to AVAILABLE(0) " << endl; 
   }//if ends 
else if  (Carray [RoomNo-1] == 1) 
{ 
cout <<"Do You want to Change Room No. " << RoomNo << " from RESERVED(1) to AVAILABLE(0) ?\n Press Y/y to continue " << endl; 
cin >> reserve ; 
if ( Carray[RoomNo-1] == 1 && reserve == 'y' || reserve == 'Y') 
   { 
                    Carray[RoomNo-1] = 0 ; 
cout << "Room No. " << RoomNo << " is Now  AVAILABLE(0) " << endl; 
   } 
else if (reserve == 'n' || reserve == 'N') 
{goto i ; } 
else if (reserve != 'y' || reserve == 'y'); 
 
else  
{cout << "Its already RESERVED(1) " << endl;} 
} 
//else ends 
cout << "\nThe Room Status After Changes is \n \n \n " << endl; 
cout << "ROOM NO " << setw(8) << "STATUS" << setw(12) << "CUST ID " << setw(12) <<"CUSTOMER NAME" << setw(10)<< "STAY DAYS" << setw(10) << "KEY NO." << endl; 
for (int i = 0; i < common; i++) 
{ 
cout << i + 1 << setw(10) << Carray[i]; 
if (Carray[i] == 1 ) 
{ 
cout << setw(12)<<CustID2C[i] << setw(12) << CusNameC[i]<< setw(13)<<daysCom[i]<<setw(10)<< KeyNoC[i] ; 
} 
cout << endl; 
     }//for ends 
     }//else if ends 
 
}//while ends 
}//AdminCommon function ends 
 
