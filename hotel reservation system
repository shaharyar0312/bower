  uniform_int_distribution <unsigned int > keys (251,300); 
KeyNoL[i] = keys(lux); 
 
default_random_engine del (static_cast <unsigned int> (time (0))); 
  uniform_int_distribution <unsigned int > keyss (301,350); 
KeyNoD[i] = keyss(del);  
 
 default_random_engine Common(static_cast <unsigned int> (time (0))); 
     uniform_int_distribution <unsigned int> IDC(1,50); 
         CustIDC[i] = IDC(Common); 
 
 default_random_engine Luxury(static_cast <unsigned int> (time (0))); 
     uniform_int_distribution <unsigned int> IDL(51,100); 
         CustIDL[i] = IDL(Luxury); 
 
 default_random_engine Deluxe(static_cast <unsigned int> (time (0))); 
