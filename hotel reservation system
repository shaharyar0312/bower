   cout << "\nDo You want to reserve rooms from any other category ? press Y/y to continue\n " << endl; 
   cin >> response1;}while (response1 == 'y' || response1 == 'Y');//do while ends 
 
        }//if ends 
else 
{cout << "\nThanks you for coming\n " << endl;} 
cout << "\n\n\n Would you like to see the ADMIN Portion also ? press Y/y to Continue \n" << endl; 
cin >> response1; 
if (response1 == 'y' || response1 == 'Y');//will continue to compile 
else  
break;//will skip or will serve as a break case 
/*break;*///case1 ends(customer) 
 
case 2://ADMIN 
cout << "\n\n****ADMIN*****" << endl; 
string  pass  = "apple"; 
string pass1; 
int t=0; 
u:if (t > 4) 
{ 
cout << "You Are not an Admin\n" << endl; 
