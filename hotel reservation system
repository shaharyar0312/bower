//USERS  FUNCTIONS STARTSSS//// 
 
void CommonRooms(bool Carray[common],int CustIDC[common], int KeyNoC[common],int daysCom[common],string CusNameC[common], int Cid)// 
{ 
 
char reserve; 
int RoomNo,n=0; 
cout << "\n WE have " << common << " COMMON ROOMS \n0 = AVAILABLE \n1 = RESERVED " << endl; 
cout << "\nROOM NO " << setw(8) << "STATUS" << endl; 
for (int i = 0; i < common; i++) 
{ 
cout << i + 1 << setw(10) << Carray[i]; 
cout << endl; 
}//for ends 
cout << " \nWould u like to reserve any room sir ? \n Press Y/y to continue " << endl; 
cin >> reserve ;  
while ( reserve == 'y' || reserve == 'Y') 
{ 
cout <<"\nWhich Room No. Would you like Reserve sir (select any valid room no.) \n" << endl; 
    cin >> RoomNo; 
if ( RoomNo > 10 || RoomNo < 1 )  
{ 
cout <<RoomNo << "\nThe Room No. "<<RoomNo<<" does Not Exist in our hotel " << endl; 
break; 
} 
else  
{ 
    if ( Carray [RoomNo-1] == 0 )  
   {  
                 Carray[RoomNo-1] = 1 ; 
 CustID2C[RoomNo-1]= CustIDC[Cid]; 
 cout << "\n Kindly Enter Some information \n " << endl; 
 cout << "\n***********************************************************" << endl; 
 cout << "\n Enter your first name only (e.g. Terry)\n " << endl; 
 cin >> CusNameC[RoomNo-1]; 
 cout << "\n For how many days are you going to stay? (kindly enter only numeric values)\n" << endl; 
 cin >> daysCom[RoomNo-1]; 
  
 cout << "\n***********************************************************"<< endl; 
 cout <<"\nRoom No " << RoomNo  <<" Has now been reserved by " << CusNameC[RoomNo-1]<<"\n"<< endl ;  
cout << "Your CustomerID  is : " << CustID2C[RoomNo-1] << " and Your Room's Key Number is " << KeyNoC[RoomNo-1]<<endl; 
cout << "\n\n\n" << endl; 
       }//if ends 
  else  
 { 
              cout << "\nThis Room No is Already Reserved sir. \n select any other Room ,sir " << endl; 
  cout << endl; 
 
 }//else ends 
cout << "\nWould you like to reserve any other room sir? Press Y/y to continue " << endl; 
cin >> reserve; 
if ( reserve == 'n' || reserve == 'N'); 
else if(reserve != 'y' || reserve != 'Y'); 
       n++;//just to print thank for visiting OR Thanks for  reserving room down below 
}//while ends 
if(  n == 0 )  
{cout << "\nThank You for visiting.Have a nice day :) " << endl;}//else ends 
else   
{cout << "\nThanks for Reserving Rooms sir,Hope u enjoy "<< endl;} 
} 
}//CommonRooms Function ends 
 
